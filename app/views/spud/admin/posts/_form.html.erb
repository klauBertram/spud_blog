<%= form_for @post, :url => spud_admin_post_path(@post), :html => {:class => 'right_aligned_form'} do |f| %>	

	<fieldset>
		<legend>Post Title</legend>
		<p>
			<%= f.text_field :title, :class => 'full-width' %>
		</p>
	</fieldset>

	<div>
		<%= f.label :content %>
		<%= f.text_area :content, :class => 'wysiwym' %>
	</div>

	<fieldset>
		<legend>Categories</legend>
		<ul id="spud_post_categories_form">
			<%= render :partial => 'category', :collection => @categories[0] %>
		</ul>
		<div id="spud_post_new_category_form">
			<%= hidden_field_tag 'spud_post_new_category_path', spud_admin_post_categories_path %>
			<h5>New Category</h5>
			<div>
				<label>Parent:</label>
				<select id="spud_post_new_category_parent_id">
					<option value="0">No Parent</option>
					<%=  options_for_select(SpudPostCategory.options_for_categories(@categories)) %>
				</select>	
			</div>
			<div>
				<label>Name:</label>
				<input type="text" id="spud_post_new_category_name" />
			</div>
			<div>
				<input type="button" value="Create"/>
			</div>
		</div>
	</fieldset>

	<fieldset>
		<legend>Advanced</legend>
		<ol>
			<li>
				<%= f.label :published_at, 'Publish Date' %>
				<%= f.text_field :published_at, :class => 'spud_form_date_picker' %>
			</li>
			<li>
				<%= f.label :visible %>
				<%= f.check_box :visible %>
			</li>
			<li>
				<%= f.label :comments_enabled %>
				<%= f.check_box :comments_enabled %>
			</li>
		</ol>
	</fieldset>

	<fieldset class="submit">
		<%= f.submit 'Save Post', :class => "wymupdate"%> or <%= link_to "cancel",request.referer %>
	</fieldset>

<% end %>

<script type="text/javascript">
	$(document).ready(Spud.Admin.Posts.edit);
</script>